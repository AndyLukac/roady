<div class="container">
  <h4 style="text-align:center;"> My Journeys </h4>
  <% @journeys.each do |journey| %>
    <div class="row">
      <div class="col s4 m4">
            <%#= cl_image_tag journey.photo %>
          <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1526737511523-ba685f246e8c?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=7673dbfb790ac307819fe5eec639da7b&auto=format&fit=crop&w=2691&q=80'); background-size: contain;">
          <h3 class="journey-title"><%= journey.name %></h3>
          <div class="journey-dates">
            <h6><%= journey.date %></h6>
          </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%#= cl_image_path journey.photo, height: 300, width: 400, crop: :fill %>
