<div class="marker-card">
  <div class="tab-slider--nav">
    <ul class="tab-slider--tabs">
      <li class="tab-slider--trigger active" rel="<%= journey_item.id %>-1">Depart</li>
      <li class="tab-slider--trigger" rel="<%= journey_item.id %>-2">Arrive</li>
    </ul>
    <i class="small material-icons marker-icon">train</i>
  </div>
  <div class="tab-slider--container">
    <div id="<%= journey_item.id %>-1" class="tab-slider--body">
      <div class="dep-place"><%=journey_item.departure_place %></div>
      <div class="dep-date"><%=journey_item.departure_date.strftime("%b %d, %Y at %H:%M")%></div>
    </div>
    <div id="<%= journey_item.id %>-2" class="tab-slider--body">
      <div class="arr-place"><%=journey_item.arrival_place %></div>
      <div class="arr-date"><%=journey_item.arrival_date.strftime("%b %d, %Y at %H:%M") %></div>
    </div>
  </div>
</div>
