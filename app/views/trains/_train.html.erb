<div class="row hover-bg" style="margin-bottom: 0px !important;">
  <div class="journey-item-row">
    <div class="col s6 journey-item-image">
      <i class="large material-icons">train</i>
    </div>
    <div class="col s6">
      <h5><%= train.departure_place %></h5>
      <p>Arrival: <%= train.arrival_place %></p>
      <p>Reservation: <%= train.reservation_number %></p>
      <p>Price: $ <%= train.price %></p>

      <div class="journey-item-dates">
        <div class="arrival">
          <%= image_tag("arrival.png", width: "20", class: "dates-icon")%><p style="font-style: italic;"><%= train.departure_date.strftime("%d.%m.%y - %H:%M") %></p>
        </div>
        <div class="departure">
          <%= image_tag("departure.png", width: "20", class: "dates-icon")%><p style="font-style: italic;"><%= train.arrival_date.strftime("%d.%m.%y - %H:%M") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
