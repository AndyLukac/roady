<div class="row hover-bg" style="margin-bottom: 0px !important;">
  <div class="journey-item-row">
    <div class="col s6 journey-item-image">
      <i class="large material-icons">airplanemode_active</i>
    </div>
    <div class="col s6">
      <h5><%= flight.flight_number %></h5>
      <p>Reservation: <%= flight.reservation_number %></p>
      <p>Departure: <%= flight.departure_place %></p>
      <p>Arrival: <%= flight.arrival_place %></p>
      <p>Price: <%= flight.price %></p>

      <div class="journey-item-dates">
        <div class="arrival">
          <%= image_tag("arrival.png", width: "20", class: "dates-icon")%><p style="font-style: italic;"><%= flight.arrival_date.strftime("%d.%m.%y") %></p>
        </div>
        <div class="departure">
          <%= image_tag("departure.png", width: "20", class: "dates-icon")%><p style="font-style: italic;"><%= flight.departure_date.strftime("%d.%m.%y") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
